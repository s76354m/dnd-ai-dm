# D&D AI DM - Environment Configuration
# Copy this file to .env and fill in your API keys and preferences

# AI Provider Selection
# Options: 'openai', 'anthropic', or 'auto' (uses first available)
AI_PROVIDER=auto

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORGANIZATION=your_organization_id_optional

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Model Selection for Different Components
# You can specify different models for different components
# Leave blank to use the default model specified above
NARRATIVE_MODEL=
COMBAT_MODEL=
DIALOGUE_MODEL=
COMMAND_MODEL=

# Generation Parameters
# These control how the AI generates responses
TEMPERATURE=0.7
MAX_TOKENS=1000
TOP_P=1.0
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# Application Settings
DEBUG_MODE=false
CACHE_ENABLED=true
CACHE_DURATION=3600  # In seconds
MAX_RETRIES=3
RETRY_DELAY=1000     # In milliseconds

# Persistence Settings
SAVE_DIRECTORY=./saves
AUTO_SAVE=true
AUTO_SAVE_INTERVAL=300  # In seconds

# Logging Settings
LOG_LEVEL=info  # Options: debug, info, warn, error
LOG_TO_FILE=true
LOG_FILE=./logs/dnd-ai-dm.log

# AI Generation Parameters
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048
AI_DEBUG=false

# Component-Specific Model Override
# Uncomment and set these to override the default models for specific components
# OPENAI_DM_MODEL=gpt-4-turbo-preview
# OPENAI_STORY_MODEL=gpt-4-turbo-preview
# OPENAI_NPC_MODEL=gpt-3.5-turbo
# OPENAI_COMBAT_MODEL=gpt-3.5-turbo
# OPENAI_QUEST_MODEL=gpt-4-turbo-preview

# ANTHROPIC_DM_MODEL=claude-3-opus-20240229
# ANTHROPIC_STORY_MODEL=claude-3-opus-20240229
# ANTHROPIC_NPC_MODEL=claude-3-haiku-20240307
# ANTHROPIC_COMBAT_MODEL=claude-3-haiku-20240307
# ANTHROPIC_QUEST_MODEL=claude-3-sonnet-20240229

# Application Settings
LOG_LEVEL=info
USE_CACHE=true
CACHE_EXPIRY=3600

# DM Settings
STORY_COMPLEXITY=medium  # simple, medium, complex
AI_CREATIVITY=0.7        # 0.0 to 1.0

# API Keys for AI Services
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration
AI_MODEL=gpt-4-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# Application Settings
LOG_LEVEL=info
SAVE_DIRECTORY=./saves
DEBUG_MODE=false

# Game Settings
DEFAULT_CAMPAIGN_NAME=The Lost Mine of Phandelver
DEFAULT_PLAYER_LEVEL=1
MAX_PARTY_SIZE=6 