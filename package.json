{
  "name": "dnd-ai-dm",
  "version": "1.0.0",
  "description": "An AI-powered Dungeon Master for text-based D&D campaigns",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:fast": "jest --config jest.skip-typecheck.config.js",
    "test:debug": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:character-creation": "node test-character-creation.js",
    "test:save-load": "ts-node src/tests/save-load-test.ts",
    "test:save-load-integration": "ts-node src/tests/save-load-integration-test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup-ai-keys": "ts-node src/cli/ai-key-setup.ts",
    "narrative-example": "ts-node src/examples/ai-narrative-example.ts",
    "combat-example": "ts-node src/examples/ai-combat-example.ts",
    "health-check": "ts-node src/cli/health-check.ts",
    "integration-test": "ts-node src/tests/integration/game-flow-test.ts",
    "quest-example": "ts-node src/examples/quest-example.ts",
    "location-example": "ts-node src/examples/location-example.ts",
    "test:api-keys": "ts-node src/examples/test-api-keys.ts",
    "example:real-ai": "ts-node src/examples/real-ai-example.ts",
    "run:combat-effects": "ts-node src/examples/run-combat-effects.ts",
    "run:reaction-example": "ts-node src/examples/run-reaction-example.ts",
    "run:reaction-integration": "ts-node src/examples/run-reaction-integration.ts",
    "run:targeting": "ts-node src/examples/run-targeting.ts",
    "run:all-examples": "ts-node src/examples/run-all-examples.ts",
    "run:simple-targeting": "ts-node src/examples/run-simple-targeting.ts",
    "run:aoe-targeting": "ts-node src/examples/run-aoe-targeting.ts",
    "run:simple-aoe-targeting": "ts-node src/examples/run-simple-aoe-targeting.ts",
    "test:combat-integration": "ts-node src/tests/combat-integration-test.ts"
  },
  "keywords": [
    "dnd",
    "ai",
    "game",
    "rpg",
    "dungeons-and-dragons",
    "dungeon-master"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5",
    "inquirer": "^8.2.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
